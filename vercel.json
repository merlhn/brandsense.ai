{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/landing",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard/identity",
      "permanent": false
    },
    {
      "source": "/terms",
      "destination": "/terms-of-service",
      "permanent": true
    },
    {
      "source": "/privacy",
      "destination": "/privacy-policy",
      "permanent": true
    },
    {
      "source": "/refund",
      "destination": "/refund-policy",
      "permanent": true
    }
  ]
}
